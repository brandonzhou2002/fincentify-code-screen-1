{
  "name": "code-screen-server",
  "version": "0.1.0",
  "description": "Code Screen Interview Server",
  "main": "src/server.ts",
  "scripts": {
    "up": "yarn run db:docker && yarn nodemon --legacy-watch --config nodemon.json",
    "up:local": "yarn run db:dev && yarn nodemon --legacy-watch --config nodemon.json",
    "build": "tsc --project ./tsconfig.json",
    "style": "yarn eslint --fix src",
    "server": "node build/src/server.js",
    "server:dev": "ts-node --project ./tsconfig.json src/server.ts",
    "server:debug": "export TS_NODE_PROJECT=./tsconfig.json && node -r ts-node/register -r tsconfig-paths/register --inspect=0.0.0.0:9873 src/server.ts",
    "db:dev": "yarn run db:generate && yarn run db:migrate && yarn run prisma:studio",
    "db:docker": "yarn run db:generate && yarn prisma migrate deploy && yarn run prisma:studio",
    "db:generate": "yarn prisma format && yarn prisma generate",
    "db:migrate": "yarn prisma migrate dev",
    "prisma:studio": "yarn prisma studio --port 3201 --browser none &",
    "test:unit": "STAGE=test yarn ts-mocha --recursive --inline-diffs --color --timeout 20000 --paths --p ./tsconfig.json './src/test/unit/**/*.ts'",
    "clean": "rm -rf ./build"
  },
  "author": "Fincentify inc.",
  "license": "LGPL-3.0-only",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "yarn@1.22.22",
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "class-validator": "^0.14.0",
    "express": "^4.18.2",
    "express-graphql": "^0.12.0",
    "graphql": "^15.8.0",
    "graphql-scalars": "^1.22.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "nconf": "^0.12.0",
    "prisma": "^5.0.0",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^4.2.0",
    "type-graphql": "^1.1.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bunyan": "^1.8.8",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/minimatch": "^5.1.2",
    "@types/mocha": "^10.0.1",
    "@types/nconf": "^0.10.3",
    "@types/node": "^25.0.10",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "chai": "^4.3.7",
    "eslint": "^8.42.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
